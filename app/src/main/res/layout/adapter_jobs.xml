<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/rlClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.qinsley.mbcustomer.utils.CustomTextViewBold
                android:id="@+id/tvJobId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <com.qinsley.mbcustomer.utils.CustomTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJobId"
                android:text="" />
            <com.qinsley.mbcustomer.utils.CustomTextView
                android:id="@+id/tvApplied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:text="" />


            <com.qinsley.mbcustomer.utils.CustomTextViewBold
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="24sp"
                android:textColor="@color/colorPrimary" />


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvApplied"
                android:layout_marginTop="8dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/RRview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="8dp">

                <com.qinsley.mbcustomer.utils.CustomTextViewBold
                    android:id="@+id/CTVBser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/services_type" />

                <com.qinsley.mbcustomer.utils.CustomTextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/CTVBser"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />


                <LinearLayout
                    android:id="@+id/llStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rectangle_red">

                    <com.qinsley.mbcustomer.utils.CustomTextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pending"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RRview"
                android:layout_marginTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/dummyuser_image" />

                <com.qinsley.mbcustomer.utils.CustomTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ivImage"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black" />


                <com.qinsley.mbcustomer.utils.CustomTextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ivImage"
                    android:text="" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDescription"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ivImage">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_placeholder" />

                    <com.qinsley.mbcustomer.utils.CustomTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rlComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlPhoto"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.qinsley.mbcustomer.utils.CustomTextView
                    android:id="@+id/tvEdit"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/view1"
                    android:layout_weight="0.3"
                    android:drawableLeft="@drawable/ic_appo_edit"
                    android:gravity="center"
                    android:text="@string/edit"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <com.qinsley.mbcustomer.utils.CustomTextView
                    android:id="@+id/tvDecline"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.3"
                    android:drawableLeft="@drawable/ic_appo_decline"
                    android:gravity="center"
                    android:text="@string/delete1"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <com.qinsley.mbcustomer.utils.CustomTextView
                    android:id="@+id/tvComplete"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_appo_complete"
                    android:gravity="center"
                    android:text="@string/complete"
                    android:textSize="14sp" />


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>